using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using UnityEngine.SceneManagement;

public class BotonesMenu : MonoBehaviour
{
    public void SceneJuegar(){
        SceneManager.LoadScene(1);
    }

    public void SceneInfo(){
        SceneManager.LoadScene(2);
    }

    public void BackToMenu(){
        SceneManager.LoadScene(0);
    }

    public void QuitApp(){
        Application.Quit();
    }

    //REDES SOCIALES//
    public string urlGH = "https://github.com/KIWIELYI";
    public void Page_GH(){
        Application.OpenURL(urlGH);
    }

    public string urlIG = "https://www.instagram.com/kiwielyi/?next=%2F&hl=es-la";
    public void Page_Ig(){
        Application.OpenURL(urlIG);
    }
}
